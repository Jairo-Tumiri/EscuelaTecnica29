    </div>
  </section>
</Layout>

<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    div {
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      width: 100%;
      height: 300px;
      display: flex;
      justify-content: center;
      position: relative;
      background-color: black;
      span {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        bottom: -70px;
        background: var(--color-4);
        padding: 1rem;
        border-radius: 50%;
        img {
          width: 100px;
          height: 100px;
          border-radius: 50%;
          object-fit: cover;
        }
      }
    }
    h1 {
      font-size: 2rem;
      margin: 5rem 0 0;
    }
  }

  header {
    text-align: center;
    margin: 2rem 0;
  }

  header h2 {
    font-size: 2rem;
  }

  .containerplan {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    padding: 0 1rem;
  }
</style>
