<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  :root {
    --main-color: #234c5b;
    --color-1: #275566;
    --color-2: #275c76;
    --color-3: #932c2a;
    --color-4: #fff;
    --color-5: #8d756a;
    --color-6: #a69793;
    --color-7: #2d2d2d;
    --color-8: #f9f9f9;
    --color-9: #000;
    --color-10: #f6f6f6;

    --family-title: "PT Serif", sans-serif;

    --radius-s: 5px;
    --radius-xs: 10px;
    --radius-ms: 20px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background-color: var(--color-4);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--family-title);
  }

  .container-65 {
    max-width: 65%;
    margin: 1rem auto;
  }
  .btn {
    background-color: var(--color-3);
    color: var(--color-4);
    padding: .5rem 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: 0.3s;
    border-radius: var(--radius-xs);
    a{
      text-decoration: none;
      color: var(--color-4);
    }
    &:hover {
      background-color: var(--color-2);
      border-radius: var(--radius-ms);
    }
  }
</style>
